{
    "name": "extrascan",
    "version": "1.0.0",
    "description": "monorepo for extrascan",
    "scripts": {
        "prepare": "husky",
        "format": "prettier --write .",
        "lint": "pnpm -r lint",
        "dev:webapp": "pnpm run dev --filter webapp",
        "build:webapp": "pnpm run build --filter webapp",
        "start:webapp": "pnpm run start --filter webapp",
        "build": "pnpm -r build"
    },
    "keywords": [],
    "author": "ajayimikeofficial@gmail.com",
    "license": "ISC",
    "prettier": {
        "singleQuote": false,
        "trailingComma": "es5",
        "printWidth": 120,
        "tabWidth": 4,
        "semi": true
    },
    "engines": {
        "node": ">=20.12.2",
        "pnpm": ">=9.15.1",
        "yarn": "please-use-pnpm",
        "npm": "please-use-pnpm"
    },
    "dependencies": {
        "@commitlint/cli": "^19.4.0",
        "@commitlint/config-conventional": "^19.2.2",
        "husky": "^9.1.4"
    }
}
